<section>
  <div class='container'>
    <div class='row mt-4'>
      <div class='d-grid gap-2 d-md-flex justify-content-md-end'>
        <a href='admin/add-products' class='btn btn-success ml-5'>
          Add Product</a>
      </div>
    </div>
    <div class='row'>
      <table class='table mt-3'>
        <thead>
          <tr>
            <th scope='col'>#</th>
            <th scope='col'>Product Name</th>
            <th scope='col'>Desc</th>
            <th scope='col'>Amount</th>
            <th scope='col'>Image</th>
          </tr>
        </thead>
        <tbody>
          {{#each products}}

            <tr>
              <th scope='row'>{{this.id}}</th>
              <td>{{this.name}}</td>
              <td>{{this.desc}}</td>
              <td>{{this.price}}</td>
              <td><img
                  src='/product-images/{{this._id}}.jpg'
                  alt=''
                  class='img-thumbnail'
                  style='width: 50px; height:50px'
                /></td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</section>